    <meta property="og:title" content="casa angelina handicrafts workshop" />
    <meta property="og:description" content="Discover the colourful ceramics of the Amalfi Coast with Casa Angelina’s new handicrafts workshop." />
    <meta property="og:url" content="http://journal.casangelina.com/2018/07/27/work-of-art/" />
    <meta property="og:site_name" content="Casa Angelina Journal" />
    <meta property="article:tag" content="amalfi coast" />
