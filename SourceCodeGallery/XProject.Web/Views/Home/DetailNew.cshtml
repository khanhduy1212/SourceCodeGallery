@{
    ViewBag.Title = "DetailNew";
    Layout = null;
    var newRepository = DependencyHelper.GetService<IGeneralRepository<XNew>>();
    var lang = "";
    var httpCookie = Request.Cookies["Language"];
    lang = httpCookie != null ? httpCookie.Value : ConfigurationManager.AppSettings["Culture"];
    var listNew = newRepository.GetIQueryableItems().Where(x => x.Active == 1 && x.CodeLanguage == lang).OrderBy(x => x.Order).ToList();
}
@using XProject.Web.Infrastructure;
@using System.Configuration
@using XProject.Domain.Abstract
@using XProject.Domain.Entities
@using XProject.Web
@model XProject.Domain.Entities.XNew
<!DOCTYPE html>
<html lang="en-GB" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="UTF-8" />
    <title>casa angelina handicrafts workshop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

