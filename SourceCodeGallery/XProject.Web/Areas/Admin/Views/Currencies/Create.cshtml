@using XProject.Domain.Entities
@using Resources
@model Currency

@{
    ViewBag.Title = Resource.AddCurrency;
}

<div class="page-header">
    <h1>
        @ViewBag.Title
    </h1>
</div>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12">
            <div class="form-horizontal">
                @Html.Partial("_CreateOrEdit", Model)
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        @Html.Bootstrap().ActionLinkButton(Resource.ButtonBackToList, "Index").PrependIcon(Icons.arrow_left)
                        &nbsp; &nbsp; &nbsp;
                        @Html.Bootstrap().SubmitButton().Id("submitbutton").Text(Resource.Save).Style(ButtonStyle.Info).PrependIcon("<i class='ace-icon fa fa-check bigger-110'></i>")
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Html.Script(
    @<script>
        $("#submitbutton").on('click', function (e) {
            e.preventDefault();
            bootbox.confirm("@Resource.ConfirmCreate", function (isOK) {
                if (isOK) {
                    $('#submitbutton').parents("form").submit();
                }
            });
        });
    </script>)
