    <script>
        function setValueSelect2(select, data) {

            var sl2 = $(select);
            // create the option and append to sSelect2
            var option = new Option(data.text, data.id, true, true);
            sl2.append(option).trigger('change');

            // manually trigger the `select2:select` event
            sl2.trigger({
                type: 'select2:select',
                params: {
                    data: data
                }
            });
        }

        function ReloadSelect2() {
            //load data
            $.each($('.js-select2-1'), function () {
                var sl2 = this;
                var _url = $(sl2).data('url');
                $(sl2).removeAttr('data-url');
                $(sl2).select2({
                    tags: true,
                    allowClear: true,
                    placeholder: $(sl2).attr("placeholder"),
                    //  minimumInputLength: 1,
                    width: 'resolve',
                    ajax: {
                        global: false,
                        url: _url,
                        dataType: 'json',
                        delay: 250, // wait 250 milliseconds before triggering the request
                        data: function (params) {
                            return {
                                q: params.term, // search term
                                page: params.page || 1,
                                pagesize: 20
                            };
                        },
                        processResults: function (data, params) {
                            params.page = params.page || 1;

                            return {
                                results: data.results,
                                pagination: {
                                    more: (params.page * 20) < data.countitem
                                }
                            };
                        }
                    }
                });

                //load data by id
                if ($(sl2).attr('data-id')) {

                    var t = $(sl2).attr('data-id');
                    $.ajax({
                        global: false,
                        type: 'GET',
                        url: _url + '/' + t
                    }).then(function (data) {
                        setValueSelect2($(sl2), data);
                    });
                }

            });



        }

        ReloadSelect2();
        function ReloadSelect2ById(id, value) {

            var sl2 = $('#' + id);
            if (value != null) {
                sl2.attr('data-id', value);
            }
            var _url = $(sl2).data('url');
            $(sl2).removeAttr('data-url');
            $(sl2).select2({
                tags: true,
                allowClear: true,
                placeholder: $(sl2).attr("placeholder"),
                //  minimumInputLength: 1,
                width: 'resolve',
                ajax: {
                    url: _url,
                    dataType: 'json',
                    delay: 250, // wait 250 milliseconds before triggering the request
                    data: function (params) {
                        return {
                            q: params.term, // search term
                            page: params.page || 1,
                            pagesize: 20
                        };
                    },
                    processResults: function (data, params) {
                        params.page = params.page || 1;

                        return {
                            results: data.results,
                            pagination: {
                                more: (params.page * 20) < data.countitem
                            }
                        };
                    }
                }
            });
            //load data by id
            if ($(sl2).attr('data-id')) {

                var t = $(sl2).attr('data-id');
                $.ajax({
                    global: false,
                    type: 'GET',
                    url: _url + '/' + t
                }).then(function (data) {
                    setValueSelect2($(sl2), data);
                });
            }
        }

    </script>

